<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Eddy Current Solutions, LLC</title>
    @* google fonts *@
    <link href="https://fonts.googleapis.com/css?family=Anton|Archivo+Black|Fjalla+One|Questrial|Work+Sans" rel="stylesheet">
    @* bulma sheets *@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.5.1/css/bulma.min.css" />
    @* MVC stuff *@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <section class="hero is-dark">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">
                    Eddy Current Solutions, LLC
                </h1>
                <h2 class="subtitle">
                    Over 30 years of experience helping businesses test, sort, and efficiently produce high-quality parts and materials.
                </h2>
            </div>
        </div>
    </section>
    @* NAV TABS *@
    <div class="tabs is-toggle is-fullwidth is-large">
        <ul>
            <li class="is-active">
                <a>
                    <span class="icon is-small"><i class="fas fa-image"></i></span>
                    <span>Get a Quote</span>
                </a>
            </li>
            <li class="is-active">
                <a>
                    <span class="icon is-small"><i class="fas fa-image"></i></span>
                    <span>Services Offered</span>
                </a>
            </li>
            <li>
                <a>
                    <span class="icon is-small"><i class="fas fa-music"></i></span>
                    <span>The ECS, LLC Approach</span>
                </a>
            </li>
            <li>
                <a>
                    <span class="icon is-small"><i class="fas fa-film"></i></span>
                    <span>About ECS, LLC</span>
                </a>
            </li>
            <li>
                <a>
                    <span class="icon is-small"><i class="fas fa-file-alt"></i></span>
                    <span>ECS, LLC Home</span>
                </a>
            </li>
        </ul>
    </div>

    @RenderBody()

