
@{
    ViewBag.Title = "Get a Quote";
}

<h2 class="quotePageTitle">Get a Quote</h2>

<div class="container">
    <div class="col-md-2">

    </div>

    <div class="col-md-8 quoteForm">
        <form action="https://formspree.io/babluratnaparkhi@gmail.com"
              method="POST">
            <div class="row">
                <label class="label is-large">Name</label>
                <input type="text" name="name" class="input is-large">
            </div>

            <div class="row">
                <label class="label is-large">Your Email address</label>
                <input type="email" name="_replyto" class="input is-large">
            </div>

            <div class="row">
                
                <div class="row">
                    <p class="messageLabel">
                        Please explain the component you'd like us to check, the materials the component is made of
                        and what the problems are with those components.
                    </p>
                    <p class="messageLabel">You can also tell us about a process concern,
                        or simply say you'd like a consultation.
                    </p>

                </div>
                <textarea class="textarea" name="message" placeholder="What do you need help with?"></textarea>
            </div>
            <div class="row">
                <input type="submit" value="Send">
            </div>
        </form>
    </div>

    <div class="col-md-2">

    </div>
</div>

